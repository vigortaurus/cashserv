#!/bin/bash
#if [ "$1" -eq 1 ]					#количество по факту меньше учета
#then
#    beep -f 2000 -n 2000
#fi

if [ $1 -eq 2 ] 					#кол-во по факту больше учета
then
    beep -f 5000 -n 4000 -f 5000 -n 4000 -f 5000 -n 4000
fi


if [ $1 -eq 3 ] 					#сошлось количество по факту и учету
then
    beep -f 3000 -n 5000
fi
if [ $1 -eq 4 ] 					#неопознанный штрих код
then
    beep -f 1000 -n 5000 -f 3000 -n 5000 -f 1000 -n 5000 -f 3000 -n 5000
fi

if [ $1 -eq 5 ] 					#штрих код короба
then
    beep -f 1000 -n 5000 -f 2000 -n 5000 -f 3000 -n 5000 -f 4000 -n 5000
fi

if [ $1 -eq 6 ] 					#неопознанный штрих код короба
then
    beep -f 6000 -n 2000 -f 6000 -n 2000 -f 6000 -n 3000 -f 6000 -n 3000 -f 6000 -n 2000 -f 6000 -n 2000
fi
